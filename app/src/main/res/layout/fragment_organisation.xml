<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganisationFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/simple_title"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="31dp"
            android:text="organisation  name"
            android:id="@+id/organizationName"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:padding="0dp"
            android:layout_margin="10dp"

            />
        <Button
            android:id="@+id/createorganization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Create organization"
            app:icon="@drawable/ic_create_org"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/invitebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="invite people"
            app:icon="@drawable/ic_add_people"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/peoplebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="people"
            app:icon="@drawable/ic_action_name"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/addnoticebuttonorganisation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Add new notice"
            app:icon="@drawable/ic_add_notice"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/addProjectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Add Project"
            app:icon="@drawable/ic_add_filter"
            style="?attr/materialButtonOutlinedStyle"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/projectlist"
                />
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_email_24"
        android:contentDescription="@string/submit"
        android:layout_margin="16dp"
        android:backgroundTint="#ffff"
        app:borderWidth="10dp"/>
</FrameLayout>